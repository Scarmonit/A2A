{
  "name": "a2a-mcp-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node --max-old-space-size=2048 dist/index.js",
    "start:production": "NODE_ENV=production node --max-old-space-size=2048 --enable-source-maps dist/index.js",
    "try": "node dist/scripts/try.js",
    "deploy:railway": "railway up --detach",
    "deploy:vercel": "vercel --prod --yes",
    "deploy:all": "powershell -ExecutionPolicy Bypass -File deploy-stack.ps1",
    "verify": "powershell -ExecutionPolicy Bypass -File verify-deployment.ps1",
    "test:agents": "node test-agent-ecosystem.js",
    "test:performance": "node test-performance.js",
    "health": "curl -f http://localhost:8787/healthz || exit 1",
    "metrics": "curl -s http://localhost:8787/metrics"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.5.0",
    "prom-client": "^15.1.3",
    "pino": "^9.3.2",
    "uuid": "^9.0.1",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/ws": "^8.5.12",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "railway": {
    "build": {
      "command": "npm run build"
    },
    "start": {
      "command": "npm run start:production"
    }
  },
  "vercel": {
    "version": 2,
    "builds": [
      {
        "src": "dist/index.js",
        "use": "@vercel/node"
      }
    ]
  }
}
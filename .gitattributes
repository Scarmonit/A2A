# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.js text eol=lf
*.ts text eol=lf
*.json text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Scripts
*.sh text eol=lf
*.ps1 text eol=crlf

# Configuration
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.env text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Docker
Dockerfile text eol=lf
docker-compose.yml text eol=lf

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
node_modules export-ignore
dist export-ignore
*.log export-ignore

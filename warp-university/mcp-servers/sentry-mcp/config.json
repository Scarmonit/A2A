{
  "mcpServers": {
    "sentry": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sentry"],
      "env": {
        "SENTRY_AUTH_TOKEN": "<your-sentry-auth-token>",
        "SENTRY_ORG": "<your-org-slug>"
      }
    }
  },
  "capabilities": {
    "error_tracking": true,
    "performance_monitoring": true,
    "release_management": true,
    "issue_management": true
  },
  "settings": {
    "default_project": null,
    "auto_resolve": false
  }
}

{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-context7"],
      "env": {
        "CONTEXT7_API_KEY": "<your-context7-api-key>"
      }
    }
  },
  "capabilities": {
    "context_management": true,
    "knowledge_base": true,
    "semantic_search": true,
    "document_indexing": true
  },
  "settings": {
    "max_context_size": 10000,
    "auto_index": true
  }
}
